<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salsabila.idn.samaquran">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuranApp">
        <activity
            android:name="com.salsabila.idn.samaquran.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OnboardingActivity"
            android:exported="false"/>
        <activity android:name=".SignInActivity"
            android:exported="false"/>
        <activity android:name=".SignUpActivity"
            android:exported="false"/>
        <activity
            android:name="com.salsabila.idn.samaquran.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.salsabila.idn.samaquran.DetailActivity"
            android:exported="false"/>
        <activity
            android:name="com.salsabila.idn.samaquran.MenuActivity"
            android:exported="false"/>
        <activity
            android:name="com.salsabila.idn.samaquran.ProfileActivity"
            android:exported="false"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>